<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yedam.spring.prdtInsp.mapper.PrdtInspMapper">
	<!-- 모달창 주문서 목록 조회 -->
	<select id="selectOrderList" resultType="PrdtInspVO">
		SELECT order_no, 
			   vend_Nm, 
			   e.edcts_cd, 
			   e.prdt_nm, 
			   order_cnt
		FROM order_sheet o JOIN edcts e
		ON o.prdt_nm = e.prdt_nm		
	</select>
	
	<!-- max 완제품LOT번호 -->
	<select id="selectMaxEdctsLotNo" resultType="PrdtInspVO">
		SELECT NVL(MAX(edcts_lot_no),'EDCTS-L'||TO_CHAR(SYSDATE,'yyyyMMdd')||0) edcts_lot_no
		FROM prdt_insp
	</select>
	

</mapper>  